@model IEnumerable<Dziennik.Application.Subject.SubjectDto>
@{
    ViewData["Title"] = "Subjects";
}
<h2>Subjects</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Subject Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SubjectId</td>
                <td>@item.Name</td>
                <td>
                <a class="btn btn-danger" asp-controller="Subject" asp-action="Delete" asp-route-id="@item.SubjectId"
                   onclick="confirmDelete('@item.SubjectId');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/Subject/ConfirmDeleteSubject.js"></script>
}