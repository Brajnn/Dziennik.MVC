@model Dziennik.Application.Class.ClassDto

@{
    ViewData["Title"] = "Details " + Model.ClassName;
}
<h1>Class @Model.ClassName</h1>


<h3>Students:</h3>

@if (Model.Students != null && Model.Students.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Student" asp-action="Details" asp-route-id="@student.StudentId">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students in this class.</p>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<div>
    <a class="btn btn-secondary" asp-controller="Class" asp-action="Edit" asp-route-id="@Model.ClassId">Edit</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
